<li>
  <div class="col s12 m6 l4">
    <div class="card blue-grey darken-1">

      {{!-- Card Name --}}
      <div class="card-content white-text">

        <span class="card-title" id='{{{id}}}' data-id="{{{id}}}" data-parent="{{{dataValues.name}}}">
          <button class="edit-subgoal waves-effect waves-purple btn-large" id='{{{dataValues.id}}}' style="display: inline-block">{{{dataValues.name}}}</button>  
          
            <a class="btn-floating btn-small waves-effect waves-light red">
              <i class="material-icons delete-subgoal" id="{{{dataValues.id}}}" style="display: inline-block">X</i>
            </a>
          <h5>Comments:</h5>
        </span>
      </div>

      {{!-- Card Comments / Emojis --}}
      <div class="container">

        <ul>
          {{#each Tasks}}
          <h6 class="comment-text">{{> tasks/task-block}}</h6>
          <button class="edit-comment" id="{{{dataValues.id}}}"
            data-subgoal-id="{{{dataValues.SubgoalId}}}">Edit</button>
          <button class="delete-comment" id="{{{dataValues.id}}}">Delete</button>
          {{/each}}

        </ul>
        <br>
        {{!-- Add Comment Btn --}}
        {{!-- <button class="add-comment-button" data-reference-goal-id="{{{dataValues.id}}}">Add A New Comment</button> --}}
      </div>
      <br>
      {{!-- Links if we want them later --}}
      {{!-- <div class="card-action">
        <a href="#">This is a link</a>
        <a href="#">This is a link</a>
      </div> --}}

    </div>
  </div>
</li>